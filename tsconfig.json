{
  "compilerOptions": {
    "baseUrl": "./src",
    "target": "es5",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "allowJs": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noImplicitThis": false,
    "jsx": "react"
  },
  "include": [
    "./src/**/**/*",
  ],
  "paths": {
    "store": ["store"],
    "components/*": ["components/*"],
    "utils/*": ["utils/*"],
    "ui/*": ["ui/*"],
  },
  "exclude": [
    "node_modules"
  ]
}